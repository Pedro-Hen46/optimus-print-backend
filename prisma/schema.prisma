generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String      @id @default(uuid()) 
  name        String
  email       String   @unique
  telefone    String    @default("1839085596")
  password    String
  role        Role     @default(ATENDIMENTO)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  passwordResetTokens PasswordResetToken[]

  StockPrinters StockPrinters[]
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([token])
}


enum Role {
  ADMINISTRADOR
  ATENDIMENTO
  TECNICO
  FINANCEIRO
}


enum ChamadoStatus {
  ABERTO
  EM_ATENDIMENTO
  FINALIZADO
  AGUARDANDO_PECAS
  CANCELADO
  REABERTO
}
// Modelo para armazenar informações de modelos de impressoras, peças, etc.
model MasterTable {
  id          String      @id @default(uuid())
  model       String
  description String
  type        String
  observation String?
  value       Decimal?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  // Campo OBRIGATÓRIO para a imagem do modelo
  imageId     String      @unique// Removido o "?" para ser obrigatório
  image       UploadedFile @relation("ModelImage", fields: [imageId], references: [id])
  printers    StockPrinters[] // Relação inversa


  @@index([imageId])
}

model Customers {
  id          String     @id @default(uuid())
  nome        String
  email       String     @unique
  alias       String     
  cnpj        String     @unique
  ie          String?
  telefone    String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  enderecos   Addresses[] 
  contatos    Contacts[]
}
model Contacts {
  id          String     @id @default(uuid())
  nome        String
  email       String     @unique
  telefone    String
  clienteId   String  
  cliente     Customers   @relation(fields: [clienteId], references: [id])
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  @@index([clienteId])
}
model Addresses {
  id          String     @id @default(uuid())
  rua         String
  numero      String
  complemento String?    
  cidade      String
  estado      String
  cep         String
  isMain    Boolean    @default(false)
  clienteId String  
  cliente     Customers   @relation(fields: [clienteId], references: [id])
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  @@index([clienteId])
}


model UploadedFile {
  id          String      @id @default(uuid())
  fileKey     String      @unique
  mimeType    String?
  createdAt   DateTime    @default(now())
  
  // Relação opcional inversa (um arquivo pode ou não estar vinculado a um modelo)
  masterTableModel MasterTable? @relation("ModelImage")
}

model StockPrinters {
  id          String     @id @default(uuid())
  serialNumber String    @unique
  modelId     String     // Referência ao modelo na MasterTable
  model       MasterTable @relation(fields: [modelId], references: [id])
  counterPb   Int        @default(0)
  counterColor Int       @default(0)
   isColor     Boolean    @default(false) 
  state       PrinterState
  destiny     PrinterDestiny
  observations String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  userId String
  createdBy User @relation(fields: [userId], references: [id])

  @@index([modelId])
}

enum PrinterState {
  NOVO
  SEMINOVO
  RECONDICIONADO
}

enum PrinterDestiny {
  LOCACAO
  VENDA
  PARTICULAR
}

